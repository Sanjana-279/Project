<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=<device-width>, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <script>
        let scoreA= parseInt(prompt("Score of A?"))
        let scoreB= parseInt(prompt("Score of B?"))
        if((scoreA>300 || scoreB>300) && scoreA + scoreB < 500 ){
            alert("Can team up")
        }else{
            alert("Cannot team up")
        }
    </script>
</body>
</html>
