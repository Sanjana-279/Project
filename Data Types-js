<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=<script>, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <script>
        //let a =1 
        //console.log("hi +a+a")
        //document.write(`hi+ a+a`, "<br>")
        //document.write(`hi+ ${a+a}`)
        //console.log(`hi +${a+a}`)

         let a ="sai"
         let b ="kumar"
         let age = 30
         console.log(`I am ${a+" "+ b},my age is ${age} is years old`)
         document.write(`I am ${a+" " + b},my age is ${age} is years old`)
        


    </script>
</body>
</html> 
