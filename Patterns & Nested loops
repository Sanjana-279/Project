<script>
    let n =5;
    let sp =n-1;
    let str =1;
    for(let i =1;i<=n;i++){
    for(let j =1;j<=sp;j++){
        document.write("&nbsp;&nbsp");
    }
    for(j =1;j<=str;j++){
        document.write("* ");
    }
    sp--;
    str++;
    document.write("<br>")
    }
</script>
